}

.toast .close-icon {
  cursor: pointer;
  font-size: 16px;
  color: #aaa;
  position: absolute;
  top: 10px;
  right: 10px;
}

.toast .close-icon:hover {
  color: #000;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0; }
  10%, 90% { opacity: 1; }
}

</style>
<script>
 function showToast(notification) {
  const toastContainer = document.getElementById('toast-container');
  
  const toast = document.createElement('div');
  toast.className = 'toast';
  
  toast.innerHTML = `
    <img src="${notification.image}" alt="Product Image">
    <div class="toast-content">
      <p class="customer-info">${notification.customerName} in ${notification.location} purchased</p>
      <p class="product-name">${notification.productName}</p>
      <p class="time">${notification.time}</p>
    </div>
    <span class="close-icon" onclick="closeToast(this)">&#10005;</span>
  `;
  
  toastContainer.appendChild(toast);
  
  setTimeout(() => {
    toastContainer.removeChild(toast);
  }, 5000);
}
  
function closeToast(element) {
  const toast = element.parentElement;
  toast.style.opacity = 0;
  setTimeout(() => {
    if (toast.parentNode) {
      toast.parentNode.removeChild(toast);
    }
  }, 600);
}

